<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:c="http://www.springframework.org/schema/c"
  xmlns:p="http://www.springframework.org/schema/p"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="htmlFilter" class="ro.isdc.wro.filters.HtmlFilter"
        c:contextPath="/wro4j"
        c:webappDirectory="/home/dparoulek/code/vivo/repos/wro4j/wro4j-examples/wro4j-osgi-example/src/main/webapp"/>

  <bean id="wroFilter" class="ro.isdc.wro.http.ConfigurableWroFilter"
        p:debug="true"
        p:cacheUpdatePeriod="15"
        p:modelUpdatePeriod="15"
        p:disableCache="true"
        p:gzipEnabled="false"
        p:jmxEnabled="false"/>

</beans>